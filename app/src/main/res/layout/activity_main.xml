<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/blue">

    <EditText
        android:id="@+id/et_email"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="12dp"
        android:background="@drawable/shape_imputs"
        android:hint="Введите email"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txt_photos"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_password"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="12dp"
        android:background="@drawable/shape_imputs"
        android:textColorHint="@color/white"
        android:hint="Введите пароль"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        android:layout_margin="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_marginTop="14dp"
        android:hint="Remember Me"
        android:textColorHint="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/et_password"
        app:layout_constraintTop_toBottomOf="@id/et_password" />
    <TextView
        android:drawableStart="@drawable/ic_lock_open"
        android:textColorHint="@color/white"
        android:hint="Forget Password"
        android:padding="5dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintRight_toRightOf="@id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_login"
        android:background="@drawable/ic_shape_button"
        android:layout_margin="22dp"
        app:layout_constraintTop_toBottomOf="@id/checkbox"
        android:textColor="@color/black"
        android:text="LOG IN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_signup"
        android:background="@drawable/ic_shape_button2"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        android:textColor="@color/white"
        android:text="SIGN UP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_photos"
        android:padding="60dp"
        android:layout_marginBottom="444dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_photos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>